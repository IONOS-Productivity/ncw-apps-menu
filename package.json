{
  "name": "ncw_apps_menu",
  "version": "1.0.0",
  "description": "Nextcloud Apps Menu",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": "^22.0.0",
    "npm": "^10.5.0"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite --mode development build",
    "watch": "vite --mode development build --watch",
    "lint": "eslint src",
    "stylelint": "stylelint src/**/*.vue src/**/*.scss src/**/*.css",
    "lint:fix": "eslint --ext .js,.ts,.vue src --fix",
    "stylelint:fix": "stylelint  \"src/**/*.scss\" \"src/**/*.vue\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "type": "module",
  "browserslist": [
    "extends @nextcloud/browserslist-config"
  ],
  "dependencies": {
    "@nextcloud/event-bus": "^3.3.2",
    "@nextcloud/initial-state": "^2.2.0",
    "@nextcloud/l10n": "^3.4.0",
    "@nextcloud/logger": "^3.0.2",
    "@nextcloud/vue": "^8.30.0",
    "vue": "^2.7.16",
    "vue-material-design-icons": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@nextcloud/babel-config": "^1.1.1",
    "@nextcloud/browserslist-config": "^3.0.1",
    "@nextcloud/eslint-config": "^8.4.2",
    "@nextcloud/stylelint-config": "^3.1.0",
    "@nextcloud/typings": "^1.9.1",
    "@nextcloud/vite-config": "^1.5.2",
    "@nextcloud/webpack-vue-config": "^6.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.1",
    "@vue/test-utils": "^1.3.6",
    "@vue/tsconfig": "^0.5.1",
    "@vue/vue2-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-serializer-vue": "^3.1.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.9",
    "vue-template-compiler": "^2.7.16",
    "vue-tsc": "^3.0.6"
  },
  "jest": {
    "preset": "ts-jest/presets/default",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": {
            "module": "commonjs",
            "moduleResolution": "node",
            "verbatimModuleSyntax": false
          }
        }
      ],
      "^.+\\.vue$": "@vue/vue2-jest",
      "^.+\\.js$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ]
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,ts,vue}",
      "!src/**/__tests__/**",
      "!<rootDir>/src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json",
      "text",
      "html",
      "lcov",
      "clover"
    ],
    "testMatch": [
      "**/src/**/__tests__/**/*.(js|ts)",
      "**/src/**/*.(test|spec).(js|ts)",
      "!**/src/**/__tests__/setup.(js|ts)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@nextcloud|vue-material-design-icons)/)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
